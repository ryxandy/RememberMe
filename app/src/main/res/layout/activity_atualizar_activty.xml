<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bgc"
    android:padding="30dp"
    tools:context=".AtualizarActivty">

    <EditText
        android:id="@+id/edtNome2"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="84dp"
        android:drawableRight="@drawable/claquetee"
        android:ems="10"
        android:hint="Digite o nome do filme"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtAutor2"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="164dp"
        android:drawableRight="@drawable/diretor"
        android:ems="10"
        android:hint="Escreva o nome do diretor"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPagina2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/estrela"
        android:ems="10"
        android:hint="Nota final"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAutor2"
        app:layout_constraintVertical_bias="0.071" />

    <Button
        android:id="@+id/btnAdicionar2"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/arredondar_area"
        android:text="Atualizar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAutor2" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/arredondar_areanegativo"
        android:text="Deletar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdicionar2" />



</androidx.constraintlayout.widget.ConstraintLayout>