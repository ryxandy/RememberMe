<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bgc"
    tools:context=".AtualizarActivty">

    <EditText
        android:id="@+id/edtNome2"
        android:layout_width="368dp"
        android:layout_height="79dp"
        android:layout_marginTop="36dp"
        android:drawableRight="@drawable/claquetee"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Digite o nome do filme"
        android:inputType="textPersonName"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtAutor2"
        android:layout_width="363dp"
        android:layout_height="67dp"
        android:layout_marginTop="140dp"
        android:drawableRight="@drawable/diretor"
        android:ems="10"
        android:hint="Escreva o nome do diretor"
        android:inputType="textPersonName"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPagina2"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/estrela"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Nota final"
        android:inputType="number"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAutor2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAdicionar2"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/arredondar_area"
        android:text="Atualizar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAutor2" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/arredondar_areanegativo"
        android:text="Deletar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdicionar2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:itemIconTint="@drawable/color_bottom"
        app:itemTextColor="@drawable/color_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSemFilme"
        app:layout_constraintVertical_bias="0.997"
        app:menu="@menu/menu_navigation" />



</androidx.constraintlayout.widget.ConstraintLayout>